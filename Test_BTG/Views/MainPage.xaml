<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Test_BTG.ViewModel"
             x:Class="Test_BTG.MainPage">

    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" HorizontalOptions="Center">


        <Image Source="logo_btg.png" HeightRequest="100" HorizontalOptions="Center" Margin="0,30,0,30" />


        <!-- Botão para Cadastrar Cliente -->
        <Button Text="Cadastrar Cliente"
                Clicked="OnCadastrarClienteClicked"
                HorizontalOptions="Center"
                BackgroundColor="#003366"
                TextColor="White"
                FontAttributes="Bold"
                WidthRequest="200"
                CornerRadius="10"
                Padding="10"
                Margin="0,10,0,10"/>
    </StackLayout>
</ContentPage>
